name: ensemble_learning

conda_env: conda.yaml

entry_points:
  send_time_irrigation:
    parameters:
      feed_id: {type: str}
      value: {type: int}
    command: "python3 kafka_adafruit/motor.py --id {feed_id} --value {value} >> logs/log_motor.out"
  stacking_train:
    parameters:
      path: {type: str}
      feed: {type: str}
    command: "spark-submit ensemble_model/EnsembleStacking.py -t {path} --id {feed}  -f humidity light temperature soil"
  stacking_prediction:
    parameters:
      path: {type: str}
      feed: {type: str}
      predict_col: {type: str}
    command: "python3 ensemble_model/EnsembleStacking.py -p {path} --id {feed} --predict {predict_col}  -f  humidity light temperature soil >> logs/log_predict.out"
  main:
    parameters:
      maxIter: {type: int, default: 5}
    command: "spark-submit main.py {maxIter}"